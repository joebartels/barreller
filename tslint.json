{
  "extends": "gts/tslint.json",
  "rules": {
    "no-any": false,

    // style
    "align": true,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "no-consecutive-blank-lines": true,
    "no-irregular-whitespace": true,
    "no-redundant-jsdoc": true,
    "no-trailing-whitespace": true,
    "object-literal-key-quotes": [true, ["as-needed"]],
    "check-catch": [true, "check-catch", "check-finally", "check-else", "check-open-brace", "check-whitespace"],
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "ordered-imports": [true, {"grouped-imports": true}],
    "prefer-method-signature": true,
    "prefer-template": [true, "allow-single-concat"],
    "prefer-while": true,
    "quotemark": [true, "single", "jsx-double", "avoid-template", "avoid-escape"],
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "space-before-function-paren": [true, {"anonymous": "never", "asyncArrow": "always", "named": "never", "method": "never", "constructor": "never"}],
    "space-within-parens": [true, 0],
    "whitespace": [true, "check-branch", "check-decl", "check-module", "check-separator", "check-rest-spread", "check-type", "check-typecast", "check-type-operator", "check-preblock"]
  }
}